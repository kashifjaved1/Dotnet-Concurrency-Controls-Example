@model Dotnet_Concurrency_Controls.Data.Entities.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.GuestName)</dt>
        <dd class="col-sm-10">@Model.GuestName</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CheckInDate)</dt>
        <dd class="col-sm-10">@Model.CheckInDate.ToShortDateString()</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CheckOutDate)</dt>
        <dd class="col-sm-10">@Model.CheckOutDate.ToShortDateString()</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LockedBy)</dt>
        <dd class="col-sm-10">@Model.LockedBy</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LockExpiry)</dt>
        <dd class="col-sm-10">@Model.LockExpiry?.ToString("g")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LockType)</dt>
        <dd class="col-sm-10">@Model.LockType</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>